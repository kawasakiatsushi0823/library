.page_header
  %h1='Books'
  = link_to "new", new_book_path, class: 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= Book.human_attribute_name(:id)
      %th= Book.human_attribute_name(:title)
      %th= Book.human_attribute_name(:status)
      %th= Book.human_attribute_name(:created_at)
      %th= ""
  %tbody
    - @books.each do |book|
      %tr
        %td= book.id
        %td= book.title
        %td= book.status
        %td= book.created_at.strftime('%Y-%m-%d')
        %td
          = link_to "edit", edit_book_path(book), class: 'btn btn-default btn-xs'
          = link_to "delete", book_delete_path(book), method: :book_delete, class: 'btn btn-xs btn-danger', data: {confirm: "本当に削除してもよろしいでしょうか？"}















